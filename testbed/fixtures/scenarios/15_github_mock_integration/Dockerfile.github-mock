FROM alpine:latest

# Install curl for health checks
RUN apk update && apk add --no-cache \
    ca-certificates \
    curl

# Create directories
RUN mkdir -p /app /usr/local/bin

# Copy github-mock binary (built from target-cache)
COPY target-cache/x86_64-unknown-linux-musl/release/github-mock /usr/local/bin/github-mock
RUN chmod +x /usr/local/bin/github-mock

# Set working directory
WORKDIR /app

# Expose port
EXPOSE 8080

# Run the github-mock server
CMD ["/usr/local/bin/github-mock"]